<thead>
  <tr>
    <th data-data="url" data-orderable="false" data-class-name="all" data-searchable="false" class="skip-export" width="100px">Title</th>
    <th data-data="url" data-orderable="false" data-class-name="all" data-searchable="false" class="skip-export" width="100px">State</th>
    <th data-data="url" data-orderable="false" data-class-name="all" data-searchable="false" class="skip-export" width="100px">Teacher</th>
    <th data-data="url" data-orderable="false" data-class-name="all" data-searchable="false" class="skip-export" width="100px">Start Date</th>
    <th data-data="url" data-orderable="false" data-class-name="all" data-searchable="false" class="skip-export" width="100px">End Date</th>
    <th width="100px">Approve</th>
    <th width="100px">Reject</th>
    <th width="100px">Edit</th>
    <th width="100px">Delete</th>
  </tr>
  <%- courses.each do |course| %>
    <tr>
      <td width="100px"><%= course.title %></td>
      <td width="100px"><%= course.state %></td>
      <td width="100px"><%= course.user.name %></td>
      <td width="100px"><%= date_format(course.start_datetime) %></td>
      <td width="100px"><%= date_format(course.end_datetime) %></td>
      <%- if course.draft? %>
        <td width="100px"><%= link_to("Approve", approve_users_course_path(course), class: 'text-emerald-on-hover') %></td>
        <td width="100px"><%= link_to("Reject", reject_users_course_path(course), data: {confirm: "Are you sure?"}, class: 'text-wild-watermelon-on-hover') %></td>
      <%- elsif course.approved? %>
        <td width="100px"><span>Approved</span></td>
        <td width="100px"><%= link_to("Reject", reject_users_course_path(course), data: {confirm: "Are you sure?"}, class: 'text-wild-watermelon-on-hover') %></td>
      <%- elsif course.rejected? %>
        <td width="100px"><%= link_to("Approve", approve_users_course_path(course), class: 'text-emerald-on-hover') %></td>
        <td width="100px"><span>Rejected</span></td>
      <%-end %>
      <td width="100px"><%= link_to("Edit", edit_users_course_path(course), class: 'text-emerald-on-hover') %></td>
      <td width="100px"><%= link_to("Delete", users_course_path(course), method: :delete, data: {confirm: "Are you sure?"}, class: 'text-wild-watermelon-on-hover') %></td>
    </tr>
  <%- end %>
</thead>

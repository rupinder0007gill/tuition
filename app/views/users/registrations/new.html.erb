<div class="users-session-new background-size-cover text-white p-6 vh-100">
  <div class="row container">
    <div class="col-lg-7 col-md-6"></div>
    <div class="col-lg-5 col-md-6 bg-mirage rounded-lg ">
      <div class="p-5 mx-auto w-100">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="floating-label my-5">
            <%= f.text_field :first_name, class: 'form-control lh-lg bg-mirage text-white my-3 rounded-lg border-oxford-blue', placeholder: 'Please enter your first name' %>
            <%= f.label :first_name, 'FirstName' %>
          </div>
          <div class="floating-label my-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control lh-lg bg-mirage text-white my-3 rounded-lg border-oxford-blue', placeholder: 'name@example.com' %>
            <%= f.label :email, 'Username or Email address' %>
          </div>
          <div class="floating-label my-5">
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control lh-lg bg-mirage text-white my-3 rounded-lg border-oxford-blue', placeholder: '************' %>
          </div>

          <div class="floating-label my-5">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control lh-lg bg-mirage text-white my-3 rounded-lg border-oxford-blue', placeholder: '************' %>
            <%= f.label :password_confirmation %>
          </div>

          <div class="floating-label my-5">
            <%= f.select :role, options_from_collection_for_select(Role.where.not(name: "admin"), "name", "name") %>
            <%= f.label :role, "Select a Role" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign Up", class: 'btn btn-lg btn-cornflower-blue rounded-lg btn-block' %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
      </div>

    </div>
  </div>

</div>
